extends layout

block content
  h1=title
  p
    #register-page.row
      .col-md-4.col-md-offset-7
        .panel.panel-default
          .panel-heading
            span.glyphicon.glyphicon-lock
            b Регистрация
          .panel-body
          form.form-horizontal(role="form")
            .form-group
              label.col-sm-3.control-label(for="login") Логин:
              .col-sm-9
                input#login.form-control(name="login",type="text",placeholder="Ваш логин",required)
            .form-group
              label.col-sm-3.control-label(for="password") Пароль:
              .col-sm-9
                input#password.form-control(name="password",type="password",placeholder="Ваш пароль",required)
            .form-group
              label.col-sm-3.control-label(for="passwordConfirm")
              .col-sm-9
                input#password.form-control(name="passwordConfirm",type="password",placeholder="Подтверждение пароля",required)
            .form-group.last
              .col-sm-9.col-sm-offset-3
                button.btn.btn-success.btn-sm(type="submit") Зарегистрироваться
          .panel-footer
            a(href="/login/") Вход